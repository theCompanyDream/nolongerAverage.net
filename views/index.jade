doctype html
html(ng-app='baseApp')
	head
		title= title
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
		script(src="/lib/angular/angular.min.js")
		script(src="/lib/angular-animate/angular-animate.min.js")
		script(src="/lib/angular-route/angular-route.min.js")
		script(src="/lib/angular-ui-bootstrap/ui-bootstrap.js")
		link(rel="stylesheet", href="/lib/angular-ui-bootstrap/ui-bootstrap-csp.css")
		
		// The javascript and css 
		script(src="/content/javascripts/baseApp.js")
		script(src="/content/javascripts/controllers/experience.js")
		script(src="/content/javascripts/controllers/aboutMe.js")

		link(rel='stylesheet', href='/content/stylesheets/syndney.css')
		// Figure out why I can't import Angular bootstrap UI
		script(src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.14.0.js")

	body(class ="home blog")
		//Here generates the label :) 
		div(class="hfeed site", ng-controller="homePage")
			a(class="skip-link screen-reader-text") {{title}}
			header(id="masthead", class="site-header float-header", role="banner")
				div(class="header-wrap")
					div(class="container-fluid")
						div(class="row")
							div(class="col-xs-12 col-sm-6 col-md-8")
								h1(class="site-title") {{title}}
								h2(class="site-description") {{description}}
							div(class="col-xs-6 col-md-4")
								div(class="btn-menu")
									ul
										li(ng-repeat="menuItem in menus" ng-click="toggleHeader(menuItem.name)")
										a(href="/{{menuItem.location}}") >{{menuItem.name}}
								nav(id="mainnav", class ="mainnav", role="navigation")
									ul
										li(ng-repeat="menuItem in menus" ng-click="toggleHeader(menuItem.name)")
											a(href="/{{menuItem.location}}") {{menuItem.name}}
			div(ng-view)
		footer(ng-model="menus", class="site-footer", role="contentinfo")
			div(class="site-info container")
				a(href="/{{menuItem.location}}") >{{menuItem.name}}
		base(href="/")